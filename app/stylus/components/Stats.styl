[data-component='Chat']{
  height: calc(100% - 120px);
  width: calc(100% - 40px);
  border-radius: 7.5px;
  overflow-y: scroll;
  background-color: rgba(blue, .1);
  margin: 50px auto 0 auto;
  display: flex;
  flex-direction: column

	> .message {
		max-width: 90%;
		display: inline-block;
		text-align: left;
		align-self: flex-start;
		background-color: #003f99;
		padding: 15px 15px 5px 15px;
		margin: 5px;
		border-radius: 5px;
		color: white;
		font-size: 20px;
		margin-bottom: 2px;
		> .sub{
			font-size: 10px;
			float: right;
			margin-top: 10px;
			color: #aaa;
		}
	}
}